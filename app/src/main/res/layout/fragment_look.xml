<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_look_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="둘러보기"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/hs_look_chip_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tv_look_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_look_chip_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_on_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="차트"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_look_chip_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_off_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="영상"
                    android:textColor="#7D7D7D" />

                <TextView
                    android:id="@+id/tv_look_chip_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_off_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="장르"
                    android:textColor="#7D7D7D" />

                <TextView
                    android:id="@+id/tv_look_chip_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_off_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="상황"
                    android:textColor="#7D7D7D" />

                <TextView
                    android:id="@+id/tv_look_chip_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_off_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="분위기"
                    android:textColor="#7D7D7D" />

                <TextView
                    android:id="@+id/tv_look_chip_title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_chip_off_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="오디오"
                    android:textColor="#7D7D7D" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_look_sub_title_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="차트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hs_look_chip_scroll" />

        <ImageView
            android:id="@+id/iv_look_sub_tile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_sub_title_chart"
            app:layout_constraintStart_toEndOf="@id/tv_look_sub_title_chart"
            app:layout_constraintTop_toTopOf="@id/tv_look_sub_title_chart" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_look_chart_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/look_chart_background"
            android:elevation="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_look_sub_title_chart">

            <TextView
                android:id="@+id/tv_look_chart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="FLO 차트"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_look_chart_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="19시 기준"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_look_chart_title"
                app:layout_constraintStart_toEndOf="@id/tv_look_chart_title"
                app:layout_constraintTop_toTopOf="@id/tv_look_chart_title" />

            <TextView
                android:id="@+id/tv_look_chart_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="최근 24시간 집계, FLO 최고 인기곡 차트!"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_look_chart_title" />

            <ImageView
                android:id="@+id/iv_look_chart_listen"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/ic_browse_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/tv_look_chart_listen"
                app:layout_constraintEnd_toStartOf="@id/tv_look_chart_listen"
                app:layout_constraintTop_toTopOf="@id/tv_look_chart_listen" />

            <TextView
                android:id="@+id/tv_look_chart_listen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="전체듣기"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_look_flo_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_look_chart_sub_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_look_sub_title_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="영상"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_look_chart_total" />

        <ImageView
            android:id="@+id/iv_look_sub_title_video_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btn_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_sub_title_video"
            app:layout_constraintStart_toEndOf="@id/tv_look_sub_title_video"
            app:layout_constraintTop_toTopOf="@id/tv_look_sub_title_video" />

        <ImageView
            android:id="@+id/iv_look_video_present"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:src="@drawable/img_video_exp"
            app:layout_constraintTop_toBottomOf="@id/tv_look_sub_title_video"/>

        <TextView
            android:id="@+id/tv_look_video_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/iv_look_video_present"
            app:layout_constraintTop_toBottomOf="@id/iv_look_video_present"/>

        <TextView
            android:id="@+id/tv_look_video_present_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/iv_look_video_present"
            app:layout_constraintTop_toBottomOf="@id/tv_look_video_present"/>

        <HorizontalScrollView
            android:id="@+id/hs_look_video_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_look_video_present_singer">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="304dp"
                        android:layout_height="171dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_video_exp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>